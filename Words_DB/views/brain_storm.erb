<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Note Pad</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/stylesheets/note.css">
    <link href="https://fonts.googleapis.com/css?family=Special+Elite" rel="stylesheet">
    
  </head>
  <body>
    
    <!-- display  -->
    <span>
      <div class="section1">
        
        <form action="/brain_storm" method="post" id="lines_form">
        
        <table>
          <tr>
            <th></th>
            <th>Line</th>
            <th>Syllable</th> 
          </tr>
          
          <%@current_session.each do |line| %>
            <tr>
              <td><input type="checkbox" name="subject[]" value="<%= line[0]%>"></td>
              <td><%= line[2] %></td>
              <td><%= line[4] %></td> 
            </tr>
          <% end %>
        </table>
        
      </div>
      <!-- rhyme resource display -->
      <div class="section2">
        <table>
          <tr>
            <th>First</th>
            <th>Second</th> 
          </tr>
          <% Array(0..9).each do |index| %>
            <tr>
              <td><%= @second_rhyme_array[index] %></td>
              <td><%= @last_rhyme_array[index] %></td> 
            </tr>
            <% end %>
        </table>
      
      </form>
      <form action="/brain_storm/shuffle" method="post">
      <input type="submit" name="shuffle" value="shuffle">
      </form>
      
      </div>
      </span>
    <!-- end rhyme resource display -->
    <!-- delete submit for check boxes (outside of form) -->
    <input form="lines_form" type="submit" name="delete_lines" value="Delete">
    
    </form>
    
    <!-- display end -->
    <!-- input form -->
    <div>
      </form>
      <form action="/brain_storm" method="post" autocomplete="off">
        Start Writing<br>
      <input type="text" name="line" value="<%= @random_value%>" autofocus onfocus="this.setSelectionRange(this.value.length,this.value.length);"><br>
  
      <input type="submit" value="Submit">
      </form>
      
      
      
      <form action="/brain_storm" method="post">
      <input type="submit" name="clear_session" value="clear">
      </form>
      <form action="/brain_storm" method="post">
      <input type="submit" name="save_all" value="save">
      </form>
      
    </div>
    <!-- input form end -->
    
    <span>
      <div>
        
        <table>
          <tr>
            <th># </th>
            <th>Line</th>
            <th>Save?</th>
            
          </tr>
          
          <% count = 1 %>
          <%@shuffled.each do |line| %>
            <tr>
              <td><%= count %></td>
              <td><%= line %></td>
            </tr>
            <% count+= 1 %>
          <% end %>
        </table>
       
      </div>
      </span>
  
  </body>
</html>